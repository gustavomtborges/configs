[user]
	name = Gustavo Borges
	email = gustavo.mtborges@gmail.com
[alias]
	st = status
	lg = log  --graph --pretty=format:'%C(auto)%h -%C(auto)%d %s %C(green)(%cr)' --abbrev-commit --date=relative
	lga = log --graph --pretty=format:'%C(auto)%h -%C(auto)%d %s %C(green)(%cr) %C(blue)<%an>' --abbrev-commit --date=relative --all
	cm = commit -v
	co = checkout
	br = branch
	dw = diff --word-diff
	ds = diff --staged
	ft = fetch
	rb = rebase
[push]
	default = simple
[color]
	ui = true
[core]
	editor = nvim
	autocrlf = false
	eof = lf
[branch]
	autosetuprebase = always
[commit]
	template = ~/.gitmessage
[pull]
	rebase = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
	ff = only
[mergetool]
	prompt = false
	keepBackup = false
