[user]
	name = Gustavo M T Borges
	email = gustavo.mtborges@gmail.com
[alias]
	st = status
	lg = log  --graph --pretty=oneline --decorate --abbrev-commit
	lga = log --all --graph --pretty=oneline --decorate --abbrev-commit
	cm = commit
	co = checkout
	br = branch
	dw = diff --word-diff
	ds = diff --staged
	ft = fetch
	rb = rebase
[push]
	default = simple
[color]
	ui = true
[core]
	editor = vim
	autocrlf = false
	eof = lf
[branch]
	autosetuprebase = always
[commit]
	template = ~/.gitmessage
[pull]
	rebase = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
	ff = only
[mergetool]
	prompt = false
	keepBackup = false
